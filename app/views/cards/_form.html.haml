= form_with model: [@deck, @card], local: true do |form| 
  - if @card.errors.any? 
    %div{:id=>"error_explanation"}
      %h2
        = pluralize(@card.errors.count, "error") 
        prohibited this article from being saved:
      %ul
        - @card.errors.full_messages.each do |msg| 
          %li= msg 
  %p
    = form.label :front 
    %br
    = form.text_field :front 
  %p
    = form.label :back 
    %br
    = form.text_field :verse 
  %p
    = form.submit
